<div class="section">
	<div class="container">
		<h1 class="title">Reset Password</h1>

	<div class="columns">
	 	<div class="column is-one-quarter">
			<%= form_with model: @user, url: password_reset_edit_path(token: params[:token]) do |f| %>
				<div class="field">
					<%= f.label 'password', class: 'label' %>
					<%= f.password_field :password, required: true, class: 'input' %>
				</div>

				<div class="field">
					<%= f.label 'password_confirmation', class: 'label' %>
					<%= f.password_field :password_confirmation, required: true, class: 'input' %>
				</div>

				<div class="field">
					<%= f.submit 'Reset Password', class: 'button is-primary' %>
					<a href="/" class="button is-light">Cancel</a>
				</div>
			<% end %>
		</div>
	</div>
</div>