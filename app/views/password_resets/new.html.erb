<div class="section">
	<div class="container">
		<h1 class="title">Forgot your password?</h1>

	<div class="columns">
	 	<div class="column is-one-quarter">
			<%= form_with url: password_reset_path do |f| %>
				<div class="field">
					<%= f.label 'email', class: 'label' %>
					<%= f.text_field :email, required: true, class: 'input' %>
				</div>

				<div class="field">
					<%= f.submit 'Reset Password', class: 'button is-primary' %>
					<a href="/" class="button is-light">Cancel</a>
				</div>
			<% end %>
		</div>
	</div>
</div>