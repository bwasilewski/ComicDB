<div class="section">
	<div class="container">
		<h1 class="title">Sign In</h1>

	<div class="columns">
	 	<div class="column is-one-quarter">
			<%= form_with url: sign_in_path do |f| %>
				<div class="field">
					<%= f.label 'email', class: 'label' %>
					<%= f.text_field :email, required: true, class: 'input' %>
				</div>

				<div class="field">
					<%= f.label 'password', class: 'label' %>
					<%= f.password_field :password, required: true, class: 'input' %>

					<%= link_to 'Forgot your password?', password_reset_path %>
				</div>

				<div class="field">
					<%= f.submit 'Sign In', class: 'button is-primary' %>
					<a href="/" class="button is-light">Cancel</a>
				</div>
			<% end %>
			<p>Don't have an account? <a href="/sign_up">Sign up</a>.</p>
		</div>
	</div>
</div>