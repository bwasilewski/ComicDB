<div class="container">
	<h2 class="title is-2">Edit Profile</h2>

	<%= form_with model: Current.user, url: edit_profile_path do |f| %>
		<div class="field">
			<%= f.label "display_name", class: "label" %>
			<%= f.text_field :display_name, class: "input" %>
		</div>

		<div class="field">
			<%= f.label "avatar", class: "label" %>
			<%= f.file_field :avatar, class: "input" %>
		</div>

		<div class="field">
			<%= f.label "profile_text", class: "label" %>
			<%= f.text_field :profile_text, class: "input" %>
		</div>

		<div class="field">
			<%= f.submit "Update Profile", class: "button is-primary" %>
			<a href="/" class="button is-light">Cancel</a>
		</div>
	<% end %>
</div>