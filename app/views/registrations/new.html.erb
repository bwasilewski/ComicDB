<div class="section">
	<div class="container">
		<h1 class="title">Sign Up</h1>

	<div class="columns">
	 	<div class="column is-one-quarter">
			<%= form_with model: @user, url: sign_up_path do |f| %>
				<div class="field">
					<%= f.label 'email', class: 'label' %>
					<%= f.text_field :email, required: true, class: 'input' %>
				</div>

				<div class="field">
					<%= f.label 'password', class: 'label' %>
					<%= f.password_field :password, required: true, class: 'input' %>
				</div>

				<div class="field">
					<%= f.label 'password_confirmation', class: 'label', value: 'Confirm Password' %>
					<%= f.password_field :password_confirmation, required: true, class: 'input' %>
				</div>

				<div class="field">
					<%= f.submit 'Sign Up', class: 'button is-primary' %>
					<a href="/" class="button is-light">Cancel</a>
				</div>
			<% end %>
		</div>
	</div>
</div>